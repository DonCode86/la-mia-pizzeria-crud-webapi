@using la_mia_pizzeria_static.Models
@model List<Pizza>
<!doctype html>
<html lang="en">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <body>
        <div class="d-flex justify-content-center">
            <a href="@Url.Action("create","pizza")"><button class="btn-primary">Aggiungi una pizza</button></a>
        </div>  
    <ul class="flex-wrap d-flex">
        @foreach (Pizza pizza in Model)
        {
            <li class="card m-4" style="width: 15rem; list-style: none">
                    <img style="width: 100%" src="@pizza.Image">
                <div class="card-body">
                        <h2 class="card-title text-danger">Pizza @pizza.Name</h2>
                    <h5 class="card-text">Descrizione: @pizza.Ingredients</h5>
                    <h5>Prezzo: € @pizza.Price</h5>
                    <h6>Ingredienti: </h6>
                    @foreach (Ingre ing in pizza.Ingres)
                    {
                                     <p class="d-inline">@ing.Name </p>
                    }
                              ;
                    <p>Id: @pizza.Id</p>
                        <h6 class="mb-0">Categoria: Pizze @pizza.Category.Name</h6>
                    <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Details","Pizza", new{ id = pizza.Id})"><button class="btn-primary">Info</button></a>
                            <a href="@Url.Action("Update","Pizza", new{ id = pizza.Id})"><button class="btn-secondary">Modifica</button></a> 
                        <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" method="post">
                                <button class="btn-danger">Elimina</button>
                        </form>
                    </div>    
                </div>
            </li>
        }
    </ul>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    
</html>
